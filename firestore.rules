
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * ADMINISTRATIVE OVERRIDE
     * Explicitly grant the master administrator account full access to the entire root.
     */
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- User Profile & Private Data ---

    match /users/{userId} {
      // Owners have full access to their own profile and nested collections
      allow read, write: if isOwner(userId);

      match /accounts/{accountId} {
        allow read, write: if isOwner(userId);

        match /transactions/{transactionId} {
          allow read, write: if isOwner(userId);
        }
      }

      match /payees/{payeeId} { allow read, write: if isOwner(userId); }
      match /bills/{billId} { allow read, write: if isOwner(userId); }
      match /cards/{cardId} { allow read, write: if isOwner(userId); }
      match /supportTickets/{ticketId} { allow read, write: if isOwner(userId); }
    }

    // Role-based access control metadata
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); 
    }

    /** 
     * Collection Group Rules 
     * Required for collectionGroup queries (e.g., Dashboard summaries and Audit pages).
     */
    match /{path=**}/accounts/{accountId} {
      allow read: if isAdmin() || (isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid));
    }
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin() || (isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid));
    }
    match /{path=**}/cards/{cardId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
    }
  }
}
