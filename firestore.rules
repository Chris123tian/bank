
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ADMINISTRATIVE OVERRIDE
     * Explicitly grant the master administrator account full access to the entire root.
     * This bypasses path-based restrictions for global audits.
     */
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'citybank@gmail.com';
    }

    /** @description Checks if the request is from an authenticated user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Profile & Private Data ---

    match /users/{userId} {
      // Owners have full access to their own profile and nested collections
      allow read, write: if isOwner(userId);

      match /accounts/{accountId} {
        allow read, write: if isOwner(userId);

        match /transactions/{transactionId} {
          allow read, write: if isOwner(userId);
        }
      }

      match /payees/{payeeId} { allow read, write: if isOwner(userId); }
      match /bills/{billId} { allow read, write: if isOwner(userId); }
      match /cards/{cardId} { allow read, write: if isOwner(userId); }
      match /supportTickets/{ticketId} { allow read, write: if isOwner(userId); }
    }

    // Role-based access control metadata
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.token.email == 'citybank@gmail.com'; 
    }

    /** 
     * Collection Group Rules 
     * Required for administrative collectionGroup queries (e.g., Audit pages).
     */
    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }
    match /{path=**}/cards/{cardId} {
      allow read: if isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }
  }
}
