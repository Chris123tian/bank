
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    /**
     * COLLECTION GROUP RULES (Highest Priority)
     * These rules are essential for collectionGroup() queries like the Unified Ledger.
     * We allow all signed-in users to perform list operations on these groups
     * because the application logic handles identity-based filtering locally (Admin Flow).
     */
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin();
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin();
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     */
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    /**
     * STANDARD PATH-BASED ACCESS CONTROL
     */
    match /users/{userId} {
      // Users can manage their own profile
      allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);

      // Recursive match for all sub-collections (accounts, transactions, etc.)
      match /{allPaths=**} {
        allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);
      }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}
