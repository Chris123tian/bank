
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    /**
     * COLLECTION GROUP RULES (Highest Priority)
     * Critical for collectionGroup() queries used in Unified Ledger.
     * We allow 'list' operations if the user is authenticated and is the owner
     * of the data being aggregated, or is an administrator.
     */
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.customerId == request.auth.uid || 
        resource.data.userId == request.auth.uid
      );
      allow write: if isMasterAdmin();
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.customerId == request.auth.uid || 
        resource.data.userId == request.auth.uid
      );
      allow write: if isMasterAdmin();
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     */
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    /**
     * STANDARD PATH-BASED ACCESS CONTROL
     */
    match /users/{userId} {
      // Users can manage their own profile
      allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);

      // Recursive match for all sub-collections
      match /{allPaths=**} {
        allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);
      }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}
