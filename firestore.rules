
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      // Primary administrative check via email for absolute priority
      // Master admin has absolute access across all paths
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isAdmin() {
      // Master admin or verified administrative role in Firestore
      return isMasterAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     * This recursive wildcard grants absolute access to all documents for administrators.
     * Placing it at the root ensures it is evaluated during global audits.
     */
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    /** 
     * COLLECTION GROUP RULES 
     * Required for collectionGroup queries to succeed.
     * We allow admins to list unfiltered, and users to list their own data.
     */
    
    match /{path=**}/accounts/{id} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
    }
    
    match /{path=**}/transactions/{id} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
    }
    
    match /{path=**}/cards/{id} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
    }

    // --- Standard Path-Based Access Control ---

    match /users/{userId} {
      allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

      match /accounts/{accountId} {
        allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

        match /transactions/{transactionId} {
          allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
        }
      }

      match /cards/{cardId} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
      match /payees/{id} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
      match /bills/{id} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}