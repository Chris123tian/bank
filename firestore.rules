rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ADMINISTRATIVE OVERRIDE
     * Explicitly grant the master administrator account full access.
     * We check the email first to short-circuit the rule evaluation.
     */
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.token.email == 'citybank@gmail.com' || 
        (exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.role == 'super_admin')
      );
    }

    /** @description Checks if the request is from an authenticated user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** @description Combines ownership check with existence check for updates and deletes. */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // --- Collection Group Rules (Required for Administrative Audits) ---
    
    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && (request.auth.token.email == 'citybank@gmail.com' || isOwner(resource.data.customerId));
    }

    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn() && (request.auth.token.email == 'citybank@gmail.com' || isOwner(resource.data.customerId));
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      match /accounts/{accountId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.customerId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.customerId == resource.data.customerId;
        allow delete: if isExistingOwner(userId);

        match /transactions/{transactionId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId) && request.resource.data.customerId == userId && request.resource.data.accountId == accountId;
          allow update: if isExistingOwner(userId) && request.resource.data.customerId == resource.data.customerId && request.resource.data.accountId == resource.data.accountId;
          allow delete: if isExistingOwner(userId);
        }
      }

      match /payees/{payeeId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.customerId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.customerId == resource.data.customerId;
        allow delete: if isExistingOwner(userId);
      }

      match /bills/{billId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.customerId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.customerId == resource.data.customerId;
        allow delete: if isExistingOwner(userId);
      }

      match /cards/{cardId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.customerId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.customerId == resource.data.customerId;
        allow delete: if isExistingOwner(userId);
      }

      match /supportTickets/{ticketId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.customerId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.customerId == resource.data.customerId;
        allow delete: if isExistingOwner(userId);
      }
    }

    // Role-based access control
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
  }
}