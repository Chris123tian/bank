rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      // Primary administrative check via email for absolute priority
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isAdmin() {
      // Master admin or verified administrative role in roles_admin collection
      return isMasterAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    /** 
     * COLLECTION GROUP RULES 
     * These must be defined to allow collectionGroup() queries used in dashboards and audit views.
     * We allow read if the user is an admin OR if they are the owner of the document based on denormalized IDs.
     */
    
    match /{path=**}/accounts/{id} {
      allow read: if isAdmin() || (isSignedIn() && (
        resource.data.customerId == request.auth.uid || 
        resource.data.userId == request.auth.uid
      ));
    }
    
    match /{path=**}/transactions/{id} {
      allow read: if isAdmin() || (isSignedIn() && (
        resource.data.customerId == request.auth.uid || 
        resource.data.userId == request.auth.uid
      ));
    }
    
    match /{path=**}/cards/{id} {
      allow read: if isAdmin() || (isSignedIn() && (
        resource.data.customerId == request.auth.uid || 
        resource.data.userId == request.auth.uid
      ));
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     * Grant absolute access across all paths for verified administrators.
     */
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- Standard Path-Based Access Control ---

    match /users/{userId} {
      allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

      match /accounts/{accountId} {
        allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

        match /transactions/{transactionId} {
          allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
        }
      }

      match /cards/{cardId} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
      match /payees/{id} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
      match /bills/{id} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}