rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * City International Bank - Security Rules
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * isAdmin check with a hardcoded fallback for the prototype's primary admin email.
     * This ensures the admin user (citybank@gmail.com) always has full management access.
     */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "citybank@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Global Admin Bypass ---
    // This rule allows the administrator to perform any operation on any document.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- User-Specific Rules ---

    match /users/{userId} {
      // Admin bypass handles broad access; owner-specific rules remain for clients.
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update, delete: if isOwner(userId);

      match /accounts/{accountId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);

        match /transactions/{transactionId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId) && request.resource.data.userId == userId && request.resource.data.accountId == accountId;
          allow update, delete: if isOwner(userId);
        }
      }

      match /cards/{cardId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }

      match /payees/{payeeId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }

      match /scheduledPayments/{scheduledPaymentId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }
    }

    // --- Shared/Global Collections ---

    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isOwner(adminId) && request.auth.token.email == "citybank@gmail.com";
      allow update, delete: if isAdmin(); 
    }

    match /addresses/{addressId} {
      allow get, list: if isSignedIn() && (resource.data.isPublic == true || resource.data.ownerId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /branches/{branchId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // --- Collection Group Support ---
    
    match /{path=**}/transactions/{transactionId} {
      allow list: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /{path=**}/accounts/{accountId} {
      allow list: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }
  }
}