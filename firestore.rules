
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      // Unambiguous check for the primary administrative account via email
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isAdmin() {
      // Master admin (fast check) or a user with a verified administrative role record (DB check)
      return isMasterAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * ADMINISTRATIVE OVERRIDE
     * Explicitly grant the master administrator account full access to the entire root.
     * The recursive wildcard is essential for all queries, including collection groups.
     */
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    /** 
     * COLLECTION GROUP RULES 
     * Explicitly required for collectionGroup queries (e.g., Dashboard summaries and Admin Audit pages).
     * These MUST match the collection ID and use the {path=**} wildcard.
     */
    
    match /{path=**}/accounts/{accountId} {
      // Admins see all; Owners see only their own capital records
      // Note: 'read' permission includes 'list' (queries)
      allow read: if isAdmin();
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
    
    match /{path=**}/transactions/{transactionId} {
      // Admins see all; Owners see only their own settlement history
      allow read: if isAdmin();
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
    
    match /{path=**}/cards/{cardId} {
      allow read: if isAdmin();
      allow read: if isSignedIn() && resource.data.customerId == request.auth.uid;
    }

    // --- User Profile & Private Data ---

    match /users/{userId} {
      // Owners and Admins have full access to user profiles and nested collections
      allow read, write: if isOwner(userId) || isAdmin();

      match /accounts/{accountId} {
        allow read, write: if isOwner(userId) || isAdmin();

        match /transactions/{transactionId} {
          allow read, write: if isOwner(userId) || isAdmin();
        }
      }

      // Supplementary collections
      match /payees/{payeeId} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /bills/{billId} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /cards/{cardId} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /supportTickets/{ticketId} { allow read, write: if isOwner(userId) || isAdmin(); }
    }

    // Role-based access control metadata
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      // Only the Master Admin can assign or revoke administrative privileges
      allow write: if isMasterAdmin(); 
    }
  }
}
