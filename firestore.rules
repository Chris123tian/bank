rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * City International Bank - Security Rules
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Collection Group Rules ---
    // These allow global queries across all documents in collections named 'transactions' or 'accounts'
    
    match /{path=**}/transactions/{transactionId} {
      allow list: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /{path=**}/accounts/{accountId} {
      allow list: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // Allow admins to list all users, but individual users can only get their own document
      allow list: if isAdmin();
      allow get: if isOwner(userId) || isAdmin();
      
      // Allow users to create their own profile, OR admins to create any profile
      allow create: if (isOwner(userId) && request.resource.data.id == userId) || isAdmin();
      
      // Allow owners or admins to update/delete
      allow update, delete: if isOwner(userId) || isAdmin();

      match /accounts/{accountId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();

        match /transactions/{transactionId} {
          allow get, list: if isOwner(userId) || isAdmin();
          allow create: if (isOwner(userId) && request.resource.data.userId == userId && request.resource.data.accountId == accountId) || isAdmin();
          allow update, delete: if isOwner(userId) || isAdmin();
        }
      }

      match /cards/{cardId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /payees/{payeeId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /scheduledPayments/{scheduledPaymentId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();
      }
    }

    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      // Prototype Exception: Allow the seed admin email to create their own role record
      allow create: if isOwner(adminId) && request.auth.token.email == "citybank@gmail.com";
      allow update, delete: if isAdmin(); 
    }

    match /addresses/{addressId} {
      allow get, list: if isAdmin() || (isSignedIn() && (resource.data.isPublic == true || resource.data.ownerId == request.auth.uid));
      allow create: if isSignedIn() && (isAdmin() || request.resource.data.ownerId == request.auth.uid);
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.ownerId == request.auth.uid);
    }

    match /branches/{branchId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}