
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isAdmin() {
      return isMasterAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    /**
     * COLLECTION GROUP RULES (Highest Priority)
     * Optimized for the Unified Ledger and Global Asset Audit.
     */
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn() && (
        request.auth.token.email == 'citybank@gmail.com' || 
        resource.data.get('userId', '') == request.auth.uid || 
        resource.data.get('customerId', '') == request.auth.uid
      );
      allow write: if isAdmin();
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && (
        request.auth.token.email == 'citybank@gmail.com' || 
        resource.data.get('userId', '') == request.auth.uid || 
        resource.data.get('customerId', '') == request.auth.uid
      );
      allow write: if isAdmin();
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     */
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- Standard Path-Based Access Control ---

    match /users/{userId} {
      allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

      match /accounts/{accountId} {
        allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

        match /transactions/{transactionId} {
          allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
        }
      }

      match /payees/{id} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
      match /bills/{id} { allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId); }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}
