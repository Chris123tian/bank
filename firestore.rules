rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * City International Bank - Security Rules
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * isAdmin check with a hardcoded fallback for the prototype's primary admin email.
     */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "citybank@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Global Admin Bypass ---
    // Absolute authority for the master administrator across ALL paths and root.
    // This is the primary rule to prevent root listing errors for admins.
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- User-Specific Rules ---
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isAdmin();
      allow create: if isOwner(userId) || isAdmin();
      allow update, delete: if isOwner(userId) || isAdmin();

      match /accounts/{accountId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();

        match /transactions/{transactionId} {
          allow get, list: if isOwner(userId) || isAdmin();
          allow create: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
          allow update, delete: if isOwner(userId) || isAdmin();
        }
      }

      match /cards/{cardId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /payees/{payeeId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /scheduledPayments/{scheduledPaymentId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) || isAdmin();
        allow update, delete: if isOwner(userId) || isAdmin();
      }
    }

    // --- Shared/Global Collections ---

    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn() && (request.auth.token.email == "citybank@gmail.com" || isAdmin());
      allow update, delete: if isAdmin(); 
    }

    match /addresses/{addressId} {
      allow get, list: if isSignedIn() && (resource.data.isPublic == true || resource.data.ownerId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /branches/{branchId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // --- Explicit Collection Group Rules for Global Auditing and Safe Queries ---
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }
  }
}