
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    // Optimized Admin check
    function isAdmin() {
      return isMasterAdmin() || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * COLLECTION GROUP RULES (Hardened for Aggregate Audits)
     * Rules are split to ensure queryability for collectionGroup.
     */
    match /{path=**}/transactions/{transactionId} {
      // Rule 1: Master Admin Global Access (Queryable)
      allow read: if isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
      
      // Rule 2: Owner Access (Queryable - required for collectionGroup + where filter)
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid);
      
      // Rule 3: Administrative Role Access (Valid for individual get, non-queryable list)
      allow read: if isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && (isMasterAdmin() || resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid || isAdmin());
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     */
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    /**
     * STANDARD PATH-BASED ACCESS CONTROL
     */
    match /users/{userId} {
      allow read, write: if isAdmin() || isOwner(userId);

      match /accounts/{accountId} {
        allow update: if isAdmin() || (
          isOwner(userId) && 
          resource.data.status == 'Active' && 
          request.resource.data.status == 'Active' &&
          request.resource.data.balance <= resource.data.balance
        );
        allow read: if isAdmin() || isOwner(userId);
        allow create, delete: if isAdmin();

        match /transactions/{transactionId} {
          allow create: if isAdmin() || (
            isOwner(userId) && 
            get(/databases/$(database)/documents/users/$(userId)/accounts/$(accountId)).data.status == 'Active'
          );
          allow read: if isAdmin() || isOwner(userId);
          allow update, delete: if isAdmin();
        }
      }

      match /{allPaths=**} {
        allow read, write: if isAdmin() || isOwner(userId);
      }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn() && (request.auth.token.email == 'citybank@gmail.com' || request.auth.uid == uid);
      allow write: if isMasterAdmin(); 
    }
  }
}
