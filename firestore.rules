
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isAdmin() {
      return isMasterAdmin() || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * COLLECTION GROUP RULES (Highest Priority)
     * Optimized for broad listing in unified institutional ledgers.
     * These rules allow for 'list' operations only when correctly filtered by customerId.
     */
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || isAdmin());
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || isAdmin());
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     */
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    /**
     * STANDARD PATH-BASED ACCESS CONTROL
     */
    match /users/{userId} {
      allow read, write: if isAdmin() || isOwner(userId);

      match /accounts/{accountId} {
        // REGULATORY LOCKDOWN: Outgoing transfers blocked if not Active.
        // Incoming deposits/adjustments blocked if not Active (even for admins).
        allow update: if isAdmin() && (
          request.resource.data.balance <= resource.data.balance || 
          resource.data.status == 'Active'
        ) || (
          isOwner(userId) && 
          resource.data.status == 'Active' && 
          request.resource.data.status == 'Active' &&
          request.resource.data.balance <= resource.data.balance
        );
        allow read: if isAdmin() || isOwner(userId);
        allow create, delete: if isAdmin();

        match /transactions/{transactionId} {
          // Only allow creating transaction records if parent account is Active.
          allow create: if isAdmin() || (
            isOwner(userId) && 
            get(/databases/$(database)/documents/users/$(userId)/accounts/$(accountId)).data.status == 'Active'
          );
          allow read: if isAdmin() || isOwner(userId);
          allow update, delete: if isAdmin();
        }
      }

      match /{allPaths=**} {
        allow read, write: if isAdmin() || isOwner(userId);
      }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn() && (isAdmin() || request.auth.uid == uid);
      allow write: if isMasterAdmin(); 
    }
  }
}
