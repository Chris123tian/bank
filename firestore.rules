
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      // Direct, high-priority check for the primary administrative account
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    function isAdmin() {
      // Master admin or a user with a verified administrative role record
      return isMasterAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     * Grant absolute root access to verified administrators. 
     * This recursive wildcard is the most reliable way to permit global audits and collection groups.
     */
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    /** 
     * COLLECTION GROUP RULES 
     * Explicit matches required for collectionGroup queries (e.g., Audit Ledger and Dashboard Aggregates).
     */
    
    match /{path=**}/accounts/{accountId} {
      allow read: if isAdmin() || (isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid));
    }
    
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin() || (isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.userId == request.auth.uid));
    }
    
    match /{path=**}/cards/{cardId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);
    }

    // --- Standard Path-Based Access Control ---

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      match /accounts/{accountId} {
        allow read, write: if isOwner(userId) || isAdmin();

        match /transactions/{transactionId} {
          allow read, write: if isOwner(userId) || isAdmin();
        }
      }

      match /payees/{payeeId} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /bills/{billId} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /cards/{cardId} { allow read, write: if isOwner(userId) || isAdmin(); }
      match /supportTickets/{ticketId} { allow read, write: if isOwner(userId) || isAdmin(); }
    }

    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}
