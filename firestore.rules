rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** 
     * HELPER FUNCTIONS
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'citybank@gmail.com';
    }

    /**
     * COLLECTION GROUP RULES (Highest Priority)
     * Specifically authorized for collectionGroup() queries used in aggregate history views.
     */
    match /{path=**}/transactions/{transactionId} {
      allow read: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.customerId == request.auth.uid ||
        resource.data.userId == request.auth.uid
      );
      allow write: if isMasterAdmin();
    }

    match /{path=**}/accounts/{accountId} {
      allow read: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.customerId == request.auth.uid ||
        resource.data.userId == request.auth.uid
      );
      allow write: if isMasterAdmin();
    }

    /**
     * ADMINISTRATIVE MASTER OVERRIDE
     */
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- Standard Path-Based Access Control ---

    match /users/{userId} {
      allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);

      match /accounts/{accountId} {
        allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);

        match /transactions/{transactionId} {
          allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);
        }
      }

      match /payees/{id} { allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId); }
      match /bills/{id} { allow read, write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId); }
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin(); 
    }
  }
}